<Window x:Class="RiakBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="393">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="80" Margin="10,10,0,0" VerticalAlignment="Top" Width="275" Name="BucketListBox"/>
        <Button Content="Load Bucket" HorizontalAlignment="Left" Margin="290,70,0,0" VerticalAlignment="Top" Width="85" Name="BucketLoad" Click="BucketLoad_Click"/>
        <ListBox HorizontalAlignment="Left" Height="214" Margin="10,95,0,0" VerticalAlignment="Top" Width="275" Name="KeyListBox"/>
        <Label Content="Count:" HorizontalAlignment="Left" Margin="290,95,0,0" VerticalAlignment="Top" Name="CountLabel"/>
        <Button Content="Delete Bucket" HorizontalAlignment="Left" Margin="290,45,0,0" VerticalAlignment="Top" Width="85" Name="DeleteBucketButton" Click="DeleteBucketButton_Click"/>
        <Button Content="Show Key" HorizontalAlignment="Left" Margin="290,126,0,0" VerticalAlignment="Top" Width="85" Name="ShowKeyButton"/>
        <Button Content="Delete Key" HorizontalAlignment="Left" Margin="290,151,0,0" VerticalAlignment="Top" Width="85" Name="DeleteKeyButton" Click="DeleteKeyButton_Click"/>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="290,289,0,0" VerticalAlignment="Top" Width="85" Name="SettingsButton"/>

    </Grid>
</Window>
