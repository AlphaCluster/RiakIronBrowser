        <Label Content="Nodes" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="10,229,0,0" VerticalAlignment="Top" Width="70"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="160,229,0,0" VerticalAlignment="Top" Width="70"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="85,229,0,0" VerticalAlignment="Top" Width="70"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="85,254,0,0" VerticalAlignment="Top" Width="70"/>
    </Grid>
</Window>
