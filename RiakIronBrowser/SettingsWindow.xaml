        <Label Content="Retry Count:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="112,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="118" Name="RetryWaitTimeTextBox"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="112,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="118" Name="RetryCountTextBox"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="112,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="118" Name="NodePoolTimeTextBox"/>
